/**
 * Function to make a call to the solr index
 */
function call_solr_index($id, $app) {
  //Create the url for the solr related assets for subjects and places
  $solrURL = 'http://kidx.shanti.virginia.edu/solr/kmindex/select?q=kmapid:' . $app . '-' . $id . '&fq=&start=0&facets=on&group=true&group.field=asset_type&group.facet=true&group.ngroups=true&group.limit=1000&wt=json';

  //Get solr data
  $solrJSON = file_get_contents($solrURL);
  $solrObj = json_decode($solrJSON);
  //dpm($solrObj);

  //Store the solr object to be used in essays.
  variable_set('kmaps_explorer_solr', $solrObj);

  return $solrObj;
}

