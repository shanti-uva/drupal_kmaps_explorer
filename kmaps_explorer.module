/**
 * Recursive function to search for etymology from an object
 */
function search_etymology($obj) {
  foreach ($obj as $key => $value) {
    if (!empty($value->etymology)) {
      return array(
        'etymology_value' => $value->etymology,
        'name' => $value->name,
      );
    } else {
      search_etymology($value->names);
    }
  }
  return FALSE;
}

